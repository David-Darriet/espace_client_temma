<form method="post" action="{{ path('app_file_delete', {'id': file.id, 'user_login': user.login, 'category_label': category.label}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce fichier ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ file.id) }}">
    <button class="not-btn"><i class="fa fa-trash"></i><span>Supprimer</span></button>
</form>
